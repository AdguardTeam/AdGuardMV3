{
    "version": "0.0.1",
    "manifest_version": 3,
    "name": "__MSG_name__",
    "description": "__MSG_description__",
    "default_locale": "en",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_title": "__MSG_name__",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "content_scripts": [
        {
            "js": [
                "content-scripts.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}
