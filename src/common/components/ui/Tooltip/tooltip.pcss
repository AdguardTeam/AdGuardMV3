.tooltip {
    white-space: nowrap;
    padding: 8px 16px;
    color: var(--gray4d);
    background-color: var(--white);
    font-size: 14px;
    line-height: 18px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.25);
    border-radius: 4px;

    @media (prefers-color-scheme: dark) {
        color: var(--gray300);
        background-color: var(--gray700);
    }
}

.popover {
    display: inline-block;
}
