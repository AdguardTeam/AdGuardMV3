.block {
    max-width: 720px;
    border-radius: 8px;
    padding: 24px 56px;
    background-color: var(--red700);
    color: var(--white);
    transform: translateX(-56px);
}

.paragraph {
    margin-bottom: 24px;
}

.title {
    font-size: 1rem;
    font-weight: 600;
    line-height: 1.5rem;
}

.desc {
    line-height: 1.12rem;
    font-size: 0.87rem;
}
