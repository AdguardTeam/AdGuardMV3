.block {
    width: 480px;
    border-radius: 8px;
    padding: 24px 56px;
    background-color: var(--red700);
    color: var(--white);
    margin-top: 32px;
    transform: translateX(-56px);
}

.paragraph {
    margin-bottom: 24px;
}

.title {
    font-size: 16px;
    font-weight: 600;
    line-height: 24px;
}

.desc {
    line-height: 18px;
}