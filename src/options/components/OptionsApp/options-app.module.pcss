.section {
    background-color: var(--bg-main);
    display: flex;
    min-height: 100vh;
}

.content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.inner {
    width: 100%;
    max-width: 100%;
    padding-top: 4.8rem;

    @media (min-width: 640px) {
        max-width: 67.2rem;
    };

    &__btn {
        margin-left: 1.5rem;
    }
}

