.action-text {
    color: var(--grayd8);
    display: flex;
    align-items: baseline;
    font-size: 1.4rem;

    &__container {
        display: flex;
        align-items: baseline;
    }

    &__bold {
        font-weight: 600;
        font-size: 2.4rem;
    }
}

.action-button {
    width: 24rem;
    line-height: 4.8rem;
    color: var(--white);
    border: 0.1rem solid var(--gray8);
    text-transform: uppercase;
    border-radius: 0.8rem;
}
