.footer {
    position: relative;
    bottom: 0;
    min-height: 4.8rem;
    background: var(--grayDark);
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-top: 5rem;
    padding-right: 5.1rem;
    transition: 0.3s ease background;
    text-decoration: none;
    cursor: pointer;

    &:hover {
        background: var(--gray4d);
    }
}

.text {
    display: flex;
    align-items: center;
    justify-content: center;
}

.textCenter {
    margin: 0 5px;
}

.footerLogo {
    position: absolute;
    left: -41px;
    top: -4px;
}
