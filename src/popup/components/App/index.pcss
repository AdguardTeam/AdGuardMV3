.popup {
    width: 100%;
    height: 100%;
    min-width: 320px;
    min-height: 600px;
    overflow: hidden;
    display: flex;
    justify-content: flex-start;
    align-items: stretch;
    flex-direction: column;
}

input {
    & ~ label {
        font-size: 2.5rem;
        color: var(--graya4);

        &::after {
            content: 'off'
        }
    }

    &:checked ~ label::after {
        content: 'on'
    }
}
