.switcher {
    --center-width: 5rem;

    --state-color: var(--green);
    --position-right: 0;
    --icon-position: 1.7rem;

    &.disabled {
        --state-color: var(--red);
        --position-right: var(--center-width);
        --icon-position: 1.5rem;
    }

    position: relative;
    cursor: pointer;
}

.center {
    width: 8rem;
    height: 3rem;
    border-radius: 16px;
    background-color: var(--state-color);
    box-shadow: inset 0 1px 3px 0 rgba(0, 0, 0, 0.5);
}

.btn {
    position: absolute;
    width: var(--center-width);
    height: 5rem;
    right: var(--position-right);
    top: -10px;
    cursor: pointer;
    transition: 0.3s ease transform;

    &:before {
        content: '';
        display: block;
        width: 100%;
        height: 100%;
        border-radius: 100%;
        background-color: var(--white);
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.2);
    }
}

.icon {
    position: absolute;
    top: var(--icon-position);
    left: var(--icon-position);
    color: var(--state-color);
    width: 20px;
    height: 20px;
}
