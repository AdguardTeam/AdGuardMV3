{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "baseUrl": "src",
        "strict": true,
        "noEmit": true,
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "paths": {
            "Common/*": ["common/*"],
            "Popup/*": ["popup/*"],
            "Options/*": ["options/*"]
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts/lint.js"
    ]
}
